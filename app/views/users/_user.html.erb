<li> <%= link_to user.username,user%> 
     <% if current_user?(user) || current_user && current_user.admin? %>
     | <%= link_to "edit", edit_user_path(user) %>
     <% end %>
     <% if current_user && current_user.admin? && !current_user?(user) %>
       | <%= link_to "delete", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete #{ user.username }?"} %>
     <% end %>
</li>